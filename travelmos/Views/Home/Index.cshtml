@model UserLoginVM

@{
    UserLoginVM u = Context.GetLoggedUser();
    Layout = "_layoutHome";
}

<!-- Header -->
<header class="header" id="HOME">

    <!-- Navbar -->
    <div class="navbar-header">

        <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
            <a class="navbar-brand" href="#HOME"><img src="/images/logo-small.png" alt="small-logo"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="#HOME">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="#GUIDE">Guide </a>
                    </li>
                    <li class="nav-item">
                    <li class="nav-item active">
                        <a class="nav-link" href="#TOURIST">Tourist </a>
                    </li>
                    <li class="nav-item">
                    <li class="nav-item active">
                        <a class="nav-link" href="#CONTACT">Contact </a>
                    </li>


                </ul>
                <div class="navbar-nav ml-auto">

                    @if (u == null)
                    {
                        <button class="btn my-btn1 btn-navbar" href="#loginModal" data-toggle="modal">Log in</button>
                        <a class="btn btn-navbar" asp-controller="Login" asp-action="SignUp">Sign up</a>
                    }
                    else
                    {
                        <a asp-controller="Login" asp-action="Logout">@u.Username</a>
                    }

                </div>
            </div>
        </nav>
    </div>

    <div class="header-overlay">
        <div class="container header-container">
            <div class="row">
                <div class="col-md-12">
                    <!-- Logo -->
                    <div class="logo text-center">
                        <a class="navbar-brand" href="#HOME"><img src="/images/logo.png" alt="logo"></a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8 ">
                    <div class="header-h">
                        <h1> Travel the way you want</h1>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="header-text">
                        <!-- Description Guide -->

                        <p> Make someone’s experience incredible</p>
                    </div>
                    <div class="header-btns">
                        <!-- Guide button -->

                        <a class="btn btn-guide wow fadeInLeft" asp-controller="Login" asp-action="SignUp" asp-route-RegUserType="2">Sign up to guide</a>

                    </div>
                </div>

                <div class="col-md-4">
                    <div class="header-text">
                        <!-- Description Tourist -->

                        <p>Start exploring with the local guide</p>
                    </div>
                    <div class="header-btns">
                        <!-- Tourist button -->

                        <a class="btn btn-travel wow fadeInRight" asp-controller="Login" asp-action="SignUp" asp-route-RegUserType="1">Sign up to travel</a>
                    </div>
                </div>

                <div class="col-md-3 col-md-offset-1">
                    <div class="header-pic1">
                        <!-- Header iPhone -->
                        <img class="img-responsive" src="/images/iphone-header.png" alt="header iphone">
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Guide -->
<section id="GUIDE">
    <div class="container">
        <div class="row">


            <div class="col-md-12">
                <!-- Guide Section Title & Description -->
                <div class="section-title">
                    <h2> Guide</h2>
                    <p>
                        If you are a tourist who wants to visit a certain place and spend some time with common people who will serve as your guides then you have come to the right place.

                    </p>
                </div>
            </div>

        </div>
    </div>

    <div class="how-works-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-6">

                    <!-- Guide picture -->
                    <div class="about-pic wow fadeInLeft" data-wow-duration="1s" data-wow-delay=".5s">
                        <img src="/images/about.jpg" alt="about-pic">
                    </div>

                </div>
                <div class="col-md-6 wow fadeInRight" data-wow-duration="1s" data-wow-delay=".5s">

                    <!-- How It Works Title -->
                    <div class="how-works-title">
                        <h2> How It Works?</h2>
                        <p>
                            Travelmos.com is the first web-site where everyone over 18 can create their own tourist guide profile for free and be paid for their guiding services. It is also possible to offer guide services for free.
                        </p>
                    </div>

                    <!-- how it works description -->
                    <div class="how-works-des">

                        <!-- how works item 1 -->
                        <div class="how-works-item wow fadeInUp" data-wow-duration=".5s" data-wow-delay="1s">

                            <!-- how works item icon -->
                            <div><i class="fa fa-keyboard"></i></div>

                            <!-- how works item title & desc -->
                            <h3>Enter your data, language and place</h3>
                            <p>You enter your personal data, language(s) you speak and the place you wish to show as a guide into the tourist guide profile. </p>
                        </div>

                        <!-- how works item 2 -->
                        <div class="how-works-item wow fadeInUp" data-wow-duration=".5s" data-wow-delay="1s">

                            <!-- how works item icon -->
                            <div><i class="fa fa-eye"></i></div>

                            <!-- how works item title & desc -->
                            <h3>Tourists find you</h3>
                            <p>Tourists that come to your place look for a person, via Travelmos.com, that can show them the place and tell them something about its history in a language they understand. </p>
                        </div>

                        <!-- how works item 3 -->
                        <div class="how-works-item wow fadeInUp" data-wow-duration=".5s" data-wow-delay="1s">

                            <!-- how works item icon -->
                            <div><i class="fa fa-globe-europe"></i></div>

                            <!-- how works item title & desc -->
                            <h3>You lead a tour</h3>
                            <p>By using our site you will have the opportunity to meet tourists from all over the world, be at their service and simultaneously make some money. 😉 </p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

<!-- Tourist -->
<section id="TOURIST">
    <div class="about-overlay">
        <div class="container">
            <div class="row">

                <div class="col-md-12">
                    <!-- Guide Section Title & Description -->
                    <div class="section-title2">
                        <h2> Tourist</h2>
                        <p>
                            Travelmos.com is a site where you decide who is going to show you the destination of your choice.

                        </p>
                    </div>
                </div>

            </div>
        </div>

        <div class="how-works-wrapper2">
            <div class="container">
                <div class="row">

                    <div class="col-md-6 wow fadeInLeft" data-wow-duration="1s" data-wow-delay=".5s">

                        <!-- How It Works Title -->
                        <div class="how-works-title2">
                            <h2> How It Works?</h2>
                            <p>
                                On Travelmos.com you can easily find local guides from all corners of the world. There is no need for signing of an agreement or searching for travel agencies. All you need is to sign up on Travelmos.com and prepare your bags for today's tour.
                            </p>
                        </div>

                        <!-- how it works description -->
                        <div class="how-works-des2">

                            <!-- how works item 1 -->
                            <div class="how-works-item wow fadeInUp" data-wow-duration=".5s" data-wow-delay="1s">



                                <!-- how works item title & desc -->
                                <h3>Enter your data, language and place</h3>
                                <p>You enter your personal data and place you want to visit and then you choose the guide that meets your expectations. </p>

                                <!-- how works item icon -->
                                <div><i class="fa fa-keyboard"></i></div>
                            </div>

                            <!-- how works item 2 -->
                            <div class="how-works-item wow fadeInUp" data-wow-duration=".5s" data-wow-delay="1s">

                                <!-- how works item icon -->
                                <div><i class="fa fa-address-card"></i></div>

                                <!-- how works item title & desc -->
                                <h3>Send an application to the guide</h3>
                                <p>After having chosen the guide you send a request the guide must reply to within 24 hours. If the guide accepts the offer you are obliged to pay the amount of money required by the guide. </p>
                            </div>

                            <!-- how works item 3 -->
                            <div class="how-works-item wow fadeInUp" data-wow-duration=".5s" data-wow-delay="1s">

                                <!-- how works item icon -->
                                <div><i class="fa fa-envelope-open"></i></div>

                                <!-- how works item title & desc -->
                                <h3>You receive the info</h3>
                                <p>Thereafter you receive all of the information about the guide, e.g. name, surname and picture. And that's it! You've never traveled easier than this, right? 😊 </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-1"></div>
                    <div class="col-md-5">

                        <!-- Tourist picture -->
                        <div class="about-pic wow fadeInRight" data-wow-duration="1s" data-wow-delay=".5s">
                            <img src="/images/tourist.jpg" alt="tourist-pic">
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

