<!-- Contact us -->
<section class="contact-us" id="CONTACT">
    <div class="container wow bounceIn">
        <div class="row">

            <div class="col-md-12">
                <div class="section-title">
                    <h2>Contact us</h2>
                    <p>If you have any questions or recommendations for improvement feel free to contact us. 😊</p>
                </div>
            </div>

        </div>
    </div>
    <div class="contact-us-form bounceIn">
        <div class="container">
            <form>
                <div class="row">
                    <div class="col-md-4">
                        <input type="text" class="form-control" id="name" placeholder="Name">
                        <input type="email" class="form-control" id="email" placeholder="Email">
                        <input type="text" class="form-control" id="subject" placeholder="Subject">
                    </div>
                    <div class="col-md-8">
                        <textarea class="form-control" id="message" rows="25" cols="10" placeholder="Message Text..."></textarea>

                        <button type="button" class="btn btn-default submit-btn form_submit">SEND</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 wow bounceInLeft">
                <div class="social-icons">
                    <ul>
                        <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fab fa-youtube"></i></a></li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Login popup -->
<form asp-controller="Login" asp-action="Index" asp-route-for="@Model" method="post" id="loginForm">
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Log in</h5>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger" style="display: none" id="loginMsg"></div>
                    <div class="form-group">
                        <label>Username:</label>
                        @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                    </div>
                    <div class="form-group">

                        <label>Password:</label>
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                    </div>



                </div>
                <div class="modal-footer">
                    <button class="btn my-btn1 btn-navbar">Log in</button>
                </div>
            </div>
        </div>
    </div>
</form>